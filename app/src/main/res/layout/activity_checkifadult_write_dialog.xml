<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/verifydateofbirthTV"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/edit_message"
        android:text="CIAO GENITORE / ADULTO\n\nInserisci il tuo anno di nascita.\nQuesta informazione serve a verificare la tua etÃ \n e non viene memorizzata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/submitDateOfBirthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/avanti"
        android:src="@drawable/ic_baseline_thumb_up_36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancelDateOfBirthButton"
        app:layout_constraintTop_toBottomOf="@id/verifydateofbirthTV" />

    <ImageButton
        android:id="@+id/cancelDateOfBirthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/avanti"
        android:src="@drawable/ic_baseline_delete_36"
        app:layout_constraintStart_toEndOf="@id/submitDateOfBirthButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verifydateofbirthTV" />


</androidx.constraintlayout.widget.ConstraintLayout>